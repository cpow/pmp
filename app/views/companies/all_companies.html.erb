<h1>Listing companies</h1>

<table>
  <tr>
    <th>User</th>
    <th>Pip</th>
    <th>Name</th>
    <th>Notes</th>
    <th>Urls</th>
    <th>Main contact</th>
    <th>Main contact email</th>
    <th>Usernames</th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%=h company.user_id %></td>
    <td><%=h company.pip_id %></td>
    <td><%=h company.name %></td>
    <td><%=h company.notes %></td>
    <td><%=h company.urls %></td>
    <td><%=h company.main_contact %></td>
    <td><%=h company.main_contact_email %></td>
    <td><%=h company.usernames %></td>
    <td><%= link_to 'Show', company %></td>
    <td><%= link_to 'Edit', edit_company_path(company) %></td>
    <td><%= link_to 'Destroy', company, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

