<h1>Listing users</h1>

<table>
  <tr>

    <th>Id</th>
    <th>Login</th>
	<th>Email</th>
  </tr>

<% @users.each do |user| %>
  <tr>
  	<td><%=h user.id %></td>
    <td><%=h user.login %></td>
    <td><%=h user.email %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', :action => 'new' %>